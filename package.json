{
  "name": "filebot-scripts",
  "version": "0.1.0",
  "description": "personalized FileBot scripts",
  "main": "index.js",
  "dependencies": {
    "debug": "^4.1.1",
    "lodash": "^4.17.19",
    "mustache": "^3.0.1",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "xo": "^0.24.0"
  },
  "scripts": {
    "build": "node index.js",
    "build-dbg": "DEBUG=* node index.js",
    "clean": "rm -r dist",
    "lint": "xo",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "xo": {
    "semicolon": false,
    "rules": {
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "always",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devster31/filebot-scripts.git"
  },
  "author": "Daniele Riccucci",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devster31/filebot-scripts/issues"
  },
  "homepage": "https://github.com/devster31/filebot-scripts#readme"
}
